<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        app:cardUseCompatPadding="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"

            >



            <ImageView
                android:id="@+id/logopelatihan"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:foregroundGravity="center"
                android:layout_marginLeft="130dp"
                android:src="@drawable/lecture"/>


            <TextView
                android:id="@+id/nama_pelatihan"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="Pelatihan CorelDraw Bagi Pemula"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_below="@+id/logopelatihan"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/penyelenggara"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="LSP TELEMATIKA"
                android:textColor="#000000"
                android:layout_below="@+id/nama_pelatihan"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_marginLeft="5dp"
                />

            <ImageView
                android:id="@+id/tagwaktu"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                android:layout_below="@+id/penyelenggara"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_date_range_black_24dp"/>

            <TextView
                android:id="@+id/waktu"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="2017-11-21 19.00"
                android:textColor="@color/colorPrimary"
                android:layout_below="@+id/penyelenggara"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/tagwaktu"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_marginLeft="5dp"
                />

            <ImageView
                android:id="@+id/tagtempat"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                android:layout_below="@+id/penyelenggara"
                android:layout_toRightOf="@+id/waktu"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_location_on_black_24dp"/>

            <TextView
                android:id="@+id/tempat"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Gedung Serbaguna, Sukadana"
                android:textColor="@color/colorPrimary"
                android:layout_below="@+id/penyelenggara"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/tagtempat"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_marginLeft="5dp"
                />




            <ImageView
                android:id="@+id/tagkuota"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                android:layout_below="@+id/tagwaktu"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="110dp"
                android:src="@drawable/ic_people_black_24dp"/>

            <TextView
                android:id="@+id/kuota"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:text="9999"
                android:textColor="#000000"
                android:layout_below="@+id/tagwaktu"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/tagkuota"
                android:textStyle="normal"
                android:textSize="14dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/orang"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Orang"
                android:textColor="#000000"
                android:layout_below="@+id/tagwaktu"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/kuota"
                android:textStyle="normal"
                android:textSize="14dp"
                />

