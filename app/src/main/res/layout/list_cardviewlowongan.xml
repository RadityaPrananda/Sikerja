<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"

            >



            <ImageView
                android:id="@+id/logoperusahaan"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:foregroundGravity="center"
                android:layout_marginLeft="130dp"
                android:src="@drawable/kayong"/>


            <TextView
            android:id="@+id/nama_perusahaan"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="PT. Antam Tambang persero terbuka"
            android:textColor="#000000"
                android:gravity="center"
            android:textStyle="bold"
            android:textSize="16dp"
                android:layout_below="@+id/logoperusahaan"
                android:layout_alignRight="@+id/lokasi"
                android:layout_alignEnd="@+id/lokasi" />

            <TextView
                android:id="@+id/jabatan"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Purchasing Office"
                android:textColor="#000000"
                android:layout_below="@+id/nama_perusahaan"
                android:gravity="center"
                android:textStyle="normal"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                />

            <ImageView
            android:id="@+id/iconmap"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitCenter"
            android:layout_below="@+id/jabatan"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="52dp"
            android:src="@drawable/ic_location_on_black_24dp"/>

            <TextView
                android:id="@+id/lokasi"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Sukadana, Kayong Utara"
                android:textColor="@color/colorPrimary"
                android:layout_below="@+id/jabatan"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/iconmap"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_marginLeft="10dp"
                />

            <ImageView
                android:id="@+id/dateline"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                android:layout_below="@+id/iconmap"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="105dp"
                android:src="@drawable/ic_date_range_black_24dp"/>

            <TextView
                android:id="@+id/batas_waktu"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="2017-11-21"
                android:textColor="@color/colorPrimary"
                android:layout_below="@+id/iconmap"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/dateline"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_marginLeft="10dp"
                />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>